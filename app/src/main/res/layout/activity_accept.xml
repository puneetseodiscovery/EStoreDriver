<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".dashboard.accept.Accept">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/accept_backbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigate_before_black_24dp"
                android:background="@color/colorTrans"></ImageButton>


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/margin_dp55">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/defaultmargin">

                <com.estoreid.estoredriver.dashboard.accept.AppMapView
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@color/colorBlack">

                </com.estoreid.estoredriver.dashboard.accept.AppMapView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/location_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxmargin"
                    android:layout_marginTop="190dp"
                    android:layout_marginRight="@dimen/xxmargin"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/circle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_dp10"
                            android:src="@drawable/ic_circle"></ImageView>

                        <TextView
                            android:id="@+id/pcikuptext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_dp10"
                            android:layout_toRightOf="@id/circle1"
                            android:text="Pick up:"></TextView>

                        <TextView
                            android:id="@+id/pickupaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pcikuptext"
                            android:layout_marginLeft="@dimen/margin_dp10"
                            android:layout_toRightOf="@id/circle1"
                            android:text="#1922,Street 7, New Delhi, India..."
                            android:textColor="@color/colorBlack"></TextView>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/margin_dp12"
                            android:background="@color/colorTrans"
                            android:src="@drawable/ic_location"></ImageButton>

                        <View
                            android:layout_width="@dimen/margin_dp2"
                            android:layout_height="@dimen/margin_dp60"
                            android:layout_below="@id/circle1"
                            android:layout_marginLeft="@dimen/margin_dp5"
                            android:background="@color/colorBlack"></View>

                        <ImageView
                            android:id="@+id/circle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_dp70"
                            android:src="@drawable/ic_circle"></ImageView>

                        <TextView
                            android:id="@+id/delivertext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_dp10"
                            android:layout_marginTop="57dp"
                            android:layout_toRightOf="@id/circle2"
                            android:text="Deliver to:"></TextView>

                        <TextView
                            android:id="@+id/deliveraddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/delivertext"
                            android:layout_marginLeft="@dimen/margin_dp10"
                            android:layout_toRightOf="@id/circle2"
                            android:text="#1922,Street 7, New Delhi, India..."
                            android:textColor="@color/colorBlack"></TextView>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/delivertext"
                            android:layout_alignParentRight="true"
                            android:background="@color/colorTrans"
                            android:src="@drawable/ic_location"></ImageButton>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/location_view">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/defaultmargin"
                            app:cardBackgroundColor="@color/colorWhite"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/defaultmargin">

                                <RelativeLayout
                                    android:id="@+id/acceptlayoutone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_dp16"
                                    android:layout_marginTop="@dimen/margin_dp10"
                                    android:layout_marginRight="@dimen/margin_dp16">

                                    <TextView
                                        android:id="@+id/acceptorderholdername"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/latoregular"
                                        android:text="holder name"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/normaltext"></TextView>

                                    <TextView
                                        android:id="@+id/acceptorderpayment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignRight="@id/acceptorderholdername"
                                        android:layout_alignParentRight="true"
                                        android:fontFamily="@font/latoregular"
                                        android:text="Paid"
                                        android:textColor="@color/colorgreen"
                                        android:textSize="@dimen/normaltext"></TextView>


                                    <TextView
                                        android:id="@+id/acceptorderaddress_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/acceptorderholdername"
                                        android:layout_marginTop="7dp"
                                        android:fontFamily="@font/quicksand"
                                        android:text="Address :-"
                                        android:textColor="@color/colorBlack"></TextView>

                                    <TextView
                                        android:id="@+id/acceptorderaddress_tv1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/acceptorderholdername"
                                        android:layout_marginTop="2dp"
                                        android:layout_toRightOf="@id/acceptorderaddress_tv"
                                        android:text="address"></TextView>

                                    <TextView
                                        android:id="@+id/acceptorderdatetime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/acceptorderaddress_tv1"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/quicksand"
                                        android:text="Date time"></TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/acceptorderdatetime"
                                        android:layout_marginTop="@dimen/defaultmargin"
                                        android:text="Items"
                                        android:textSize="@dimen/normaltext"></TextView>
                                </RelativeLayout>

                                <View
                                    android:id="@+id/acceptview1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@id/acceptlayoutone"
                                    android:layout_marginLeft="@dimen/margin_dp10"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/colorgrey"></View>

                                <RelativeLayout
                                    android:id="@+id/acceptlayouttwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/acceptview1"
                                    android:layout_margin="@dimen/defaultmargin"
                                    android:layout_marginTop="@dimen/defaultmargin">

                                    <TextView
                                        android:id="@+id/acceptorderproductname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/latoregular"
                                        android:text="Product name"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/normaltext"></TextView>


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignRight="@id/acceptorderproductname"
                                        android:layout_alignParentRight="true">

                                        <TextView
                                            android:id="@+id/acceptorderprice"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="₹ 750"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/normaltext"></TextView>

                                        <TextView
                                            android:id="@+id/acceptorderquantity"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="5dp"
                                            android:layout_toRightOf="@id/acceptorderprice"
                                            android:background="@color/colorgrey"
                                            android:gravity="center"
                                            android:paddingLeft="@dimen/margin_dp5"
                                            android:paddingRight="@dimen/margin_dp5"
                                            android:text="x2"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorBlack"></TextView>
                                    </RelativeLayout>


                                    <TextView
                                        android:id="@+id/acceptorderproductcategory"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/acceptorderproductname"
                                        android:layout_marginTop="3dp"
                                        android:text="from boots category"></TextView>


                                </RelativeLayout>

                                <View
                                    android:id="@+id/acceptview2"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@id/acceptlayouttwo"
                                    android:layout_marginLeft="@dimen/margin_dp10"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/colorgrey"></View>


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/acceptview2"
                                    android:layout_margin="@dimen/defaultmargin">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/latoregular"
                                        android:text="Total amount"></TextView>

                                    <TextView
                                        android:id="@+id/acceptordertotalamount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:fontFamily="@font/latoregular"
                                        android:text="₹ 1500"
                                        android:textColor="@color/colorBlack"></TextView>
                                </RelativeLayout>
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/margin_dp10"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/accept_bt"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/margin_dp35"
                                android:text="Accept"
                                android:textColor="@color/colorWhite"
                                android:textAllCaps="false"
                                android:layout_marginRight="@dimen/defaultmargin"
                                android:background="@drawable/round_theme_bt"></Button>

                            <Button
                                android:id="@+id/decline_bt"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/margin_dp35"
                                android:text="Decline"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:layout_marginLeft="@dimen/defaultmargin"
                                android:background="@drawable/round_red_bt"></Button>
                        </LinearLayout>


                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>